#!/usr/bin/env ruby
require 'rubygems'
require 'thor'
require 'thor/runner'
require 'pancake/generators'

# TODO update for pancake to have a version
case ARGV.shift
when "stack"
  Pancake::Generators::Stack.start
when "short"
  Pancake::Generators::Short.start
when "micro"
  Pancake::Generators::Micro.start
else
  puts "Unknown Generator"
end
